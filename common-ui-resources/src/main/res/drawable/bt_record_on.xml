<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">

            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"/>
            <solid
                android:color="#58595E"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">

            <padding
                android:bottom="14dp"
                android:left="14dp"
                android:right="14dp"
                android:top="14dp"/>
            <solid
                android:color="#FFF"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle"
            >
            <corners android:radius="1dp"/>
            <solid
                android:color="#58595E"/>

            <size
                android:width="12dp"
                android:height="12dp"/>

        </shape>

    </item>
</layer-list>