<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#20FFFFFF" />
        </shape>
    </item>

    <item
        android:bottom="12dp"
        android:left="12dp"
        android:right="12dp"
        android:top="12dp">
        <shape android:shape="oval">
            <solid android:color="#fff" />
            <size
                android:width="64dp"
                android:height="64dp"
            />
        </shape>
    </item>

    <item
        android:bottom="32dp"
        android:left="32dp"
        android:right="32dp"
        android:top="32dp"
        >
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="#FFE10000" />
        </shape>
    </item>

</layer-list>