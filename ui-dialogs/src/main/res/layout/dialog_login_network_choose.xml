<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:id="@+id/layout_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_dialog1"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        tools:layout_width="220dp">

        <TextView
            android:id="@+id/txtview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="로그인 방법 선택"
            android:textColor="?attr/colorOnSurface8" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_wifi"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:minWidth="200dp"
            android:paddingVertical="16dp"
            android:text="WIFI로 연결"
            android:textColor="@color/selector_secondary_and_white"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_lte"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:minWidth="200dp"
            android:paddingVertical="16dp"
            android:text="LTE로 연결"
            android:textColor="@color/selector_secondary_and_white"
            android:textSize="16sp" />

    </LinearLayout>
</layout>
