    <style name="Theme.MyTheme.Immerse" parent="Theme.MyTheme">
        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">
            @bool/use_light_nav_bar
        </item>
    </style>

    <style name="Theme.MyTheme.Splash" parent="Theme.MyTheme.Immerse">
        <item name="android:windowLightStatusBar">@bool/use_light_status_bar</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.MyTheme.Settings" parent="Theme.MyTheme">
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="Theme.MyTheme.Player" parent="Theme.MyTheme">
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="Theme.MyTheme.RecordFiles" parent="Theme.MyTheme">
        <item name="android:windowFullscreen">false</item>
    </style>


    <style name="Theme.MyTheme.Song">
        <item name="colorPrimary">@color/color_deep_purple_500</item>
        <item name="colorPrimaryVariant">@color/color_deep_purple_900</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
