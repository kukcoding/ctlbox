<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            @android:color/transparent
        </item>
    </style>


    <style name="ThemeOverlay.MyTheme.AppBarLayout" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
    </style>


    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>

    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?textAppearanceBody2</item>
    </style>

    <style name="Widget.MyTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary" />

    <style name="TransparentBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBackgroundBottomSheetStyle</item>
    </style>

    <style name="TransparentBackgroundBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="scrimBackground">@android:color/transparent</item>
    </style>

    <style name="DialogTitleTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorDialogToolbarTitle</item>
    </style>

    <style name="Theme.MyTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
    </style>

    <style name="Theme.MyTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColor">#900</item>
        <item name="android:itemBackground">@color/grey50</item>
        <item name="android:background">@color/grey50</item>
    </style>


    <style name="VLC.Player.TimeText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:shadowColor">@color/blacktransparent</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
    </style>

    <style name="LoginPopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="SettingDivider" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white_transparent_10</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <style name="SettingSectionText" >
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="SettingItemLabelText" >
        <item name="android:textColor">?attr/colorOnSurface4</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SettingItemValueText">
        <item name="android:textColor">?attr/colorOnSurface2</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>